root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.kt]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120
ij_kotlin_imports_layout = *, java.**, javax.**, kotlin.**, android.**, com.devmeist3r.**
ij_kotlin_blank_lines_around_class = 1
ij_kotlin_blank_lines_around_field = 0
ij_kotlin_blank_lines_around_method = 1
ij_kotlin_imports_optimize = true
ij_kotlin_allow_trailing_comma = true
ij_kotlin_package_entry_layout = *, com.devmeist3r.**, android.**, kotlin.**

[*.xml]
indent_size = 4

[*.{gradle,kts}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf
